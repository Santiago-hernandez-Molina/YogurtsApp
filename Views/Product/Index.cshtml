@model IEnumerable<Product>;

@{
ViewBag.Title = "Productos";
Layout = "_Layout";
}

<partial name="_TitlePartial"/>
<div class="d-flex flex-column align-items-center" style="background: var(--strong-blue); padding: 20px;">
    @foreach (var Product in Model)
    {
    <div class="card mb-3" style="width: 80%; overflow: hidden;">
        <div class="row g-0">
            <div class="col-md-4" style="max-height: 300px;">
                <img src="@Product.ImagePath" style="width: 100%; height: 100%;  object-fit: cover;" class="rounded-start" alt="...">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title">@Product.Name</h5>
                    <p class="card-text">@Product.Description</p>
                    <p class="text-secondary">@Product.Quantity g</p>
                    <div class="btn-group">
                        <a  asp-controller="Order"
                            asp-action="AddItemToShoppingCart"
                            asp-route-id="@Product.Id"
                            class="btn btn-success text-white btn-sm">
                            <i class="bi bi-cart-plus"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    }
</div>
